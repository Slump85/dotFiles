# made by Evan Koehler

# set blur except for Chromium (because it doesn't need it and it saves resources)
blur: {
  method = "dual_kawase";
  strength = 10;
  background = false;
  background-frame = false;
  background-fixed = false;
}

blur-background-exclude = [
  "class_g = 'Chromium'"
];

# to make vs code and discord a bit transparent and blurred
opacity-rule = [
    "80:class_g = 'Code'",
    "80:class_g = 'Alacritty' && focused",
    "60:class_g = 'Alacritty' && !focused",
    "80:class_g = 'Dunst'",
    "80:class_g = 'Thunar'",
    "80:class_g = 'rofi'",
    "80:class_g = 'jetbrains-idea-ce'",
    "70:class_g = 'Polybar'"
]

# adding rounded corners on windows
corner-radius = 0

# without this line, blur won't work
backend = "glx"

# animations (set fading to false if you wanna disable them)
fading = true
fade-in-step = 0.08;
fade-out-step = 0.08;

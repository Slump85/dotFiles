[colors]
active = ${xrdb:active}
;background = ${xrdb:background}
background = #000000
foreground = ${xrdb:foreground}
urgent = ${xrdb:color9}
secondary = ${xrdb:secondary}
underline = ${xrdb:color5}
ram = ${xrdb:color14}
cpu = ${xrdb:color13}
power= ${colors.urgent}
reboot= ${xrdb:color14}

[bar/default]
height = 40
offset-y = 0
top = true
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
border-color = #00000000
radius = 0

line-size = 0

padding-left = 0
padding-right = 2
module-margin = 1

font-0 = JetBrains Mono:pixelsize=16;0
font-1 = unifont:fontformat=truetype:size=14:antialias=true;0
font-2 = siji:pixelsize=14;1
font-3 = Font Awesome 6 Free:pixelsize=14;0
font-4 = Font Awesome 6 Free Solid:pixelsize=14;0
font-5 = Font Awesome 6 Brands:pixelsize=14;0

modules-left = i3 
modules-center = xwindow
modules-right = wired cpu memory pulseaudio-control date powermenu

dpi-x = 96
dpi-y = 96

[bar/center]
inherit = bar/default
monitor = DP-0
modules-right = wired powermenu
modules-center = xwindow
